<ConnectScreen>:
    name: 'connect'
    ip_input: ip_input
    port_input: port_input
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            Label:
                text: 'IP Adress: '
            TextInput:
                id: ip_input
                text: '192.168.0.19'
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            Label:
                text: 'Port: '
            TextInput:
                id: port_input
                text: '9999'
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            Button:
                text: 'Quit'
                on_press: app.stop()
            Button:
                text: 'Connect'
                on_press: root.on_connect_pressed()


<DriveScreen>:
    name: 'drive'
    log_label: log_label
    #: set group_height '80dp'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: log_label
            text_size: self.size
            valign: 'top'
            font_size: '25dp'
            text: 'Drive Module'
        Button:
            size_hint_y: None
            height: group_height
            text: 'Forward'
            on_press: app.send_message(b'FW')
        BoxLayout:
            size_hint_y: None
            height: group_height
            Button:
                text: 'Right'
                on_press: app.send_message(b'RT')
            Button:
                text: 'Stop'
                on_press: app.send_message(b'ST')
            Button:
                text: 'Left'
                on_press: app.send_message(b'LT')
        Button:
            size_hint_y: None
            height: group_height
            text: 'Backward'
            on_press: app.send_message(b'BW')

