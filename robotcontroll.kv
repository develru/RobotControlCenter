<ConnectScreen>:
    name: 'connect'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            Label:
                text: 'IP Adress: '
            TextInput:
                text: '192.168.0.19'
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            Label:
                text: 'Port: '
            TextInput:
                text: '9999'
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            Button:
                text: 'Quit'
                on_press: app.stop()
            Button:
                text: 'Connect'
                on_press: root.on_connect_pressed()


<DriveScreen>:
    name: 'drive'
    #: set group_height '80dp'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: log
            text_size: self.size
            valign: 'top'
            font_size: '25dp'
            text: 'Drive Module'
        Button:
            size_hint_y: None
            height: group_height
            text: 'Forward'
        BoxLayout:
            size_hint_y: None
            height: group_height
            Button:
                text: 'Right'
            Button:
                text: 'Stop'
            Button:
                text: 'Left'
        Button:
            size_hint_y: None
            height: group_height
            text: 'Backward'

